<main>
  {{#if hasProducts }}
    <div class="grid">
      {{#each prods}}
        <article class="card-product-item">
          <header class="card_header">
            <h1 class="product_title">{{ this.title }}</h1>
          </header>
          <div class="card__iamge">
            <img src="https://img.freepik.com/free-vector/gradient-travel-agency-annual-report-template_23-2149404112.jpg?t=st=1720162557~exp=1720166157~hmac=f9c08bde082d26d06df04b119b2565cf4a9d941c2effdf6db1da251f7cfe383f&w=100" alt="A book" />
          </div>
          <div class="card__content">
            <h2 class="product__price">$20</h2>
            <p class="product_description">Description of Product</p>
          </div>
          <div class="card__action">
            <button class="btn">Add to Cart</button>
          </div>
        </article>
      {{/each}}
    </div>
  {{ else }}
    <h1>No Products found</h1>
  {{/if}}
</main>